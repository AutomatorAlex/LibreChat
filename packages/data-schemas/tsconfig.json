{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": [
      "babel__core",
      "babel__generator",
      "babel__template",
      "babel__traverse",
      "bun",
      "estree",
      "estree-jsx",
      "graceful-fs",
      "hast",
      "http-errors",
      "istanbul-lib-coverage",
      "jest",
      "js-cookie",
      "json-schema",
      "node"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
